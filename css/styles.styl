body
	font-family: "adelle-sans", Helvetica, sans-serif
	font-weight: 600
	font-size: 100%
	background-color: black
	color: white

main
	width: 95%
	max-width: 960px
	min-width: 300px
	display: block
	margin-left: auto
	margin-right: auto

figure
	position: relative
	overflow: auto
	min-height: 100%
	margin-top: 4em
	cursor: pointer

svg
	width: 100%
	position: absolute
	right: 0

.panel-bk
	width: 100%
	height: 100%

.date
	text-transform: uppercase
	font-size: 4em // (replace w calc? or mixin)

.date div
	float: left

.refresh,
.refresh:active
	display: block
	clear: both
	background-color: white
	color: black
	border-radius: 9px
	padding: 6px 10px
	font-size: 1em
	cursor: pointer
	border: none;
	transition: all .1s;

.refresh:hover
	background-color: rgba(255,255,255,.8)

.refresh:focus
	outline: none;