body
	font-family: "adelle-sans", Helvetica, sans-serif
	font-weight: 600
	font-size: 100%
	background-color: black
	color: white

.info a
	color: white
	text-decoration: none
	opacity: 0.3
	&:hover
		text-decoration: underline
		opacity: 0.7

main
	width: 95%
	max-width: 960px
	min-width: 300px
	display: block
	margin-left: auto
	margin-right: auto

figure
	position: relative
	overflow: auto
	min-height: 100%
	margin-top: 4em
	margin-bottom: 3em
	cursor: pointer
	user-select: none;

svg
	width: 100%
	position: absolute
	right: 0

.panel-bk
	width: 100%
	height: 100%

.loader
	position: absolute
	opacity: 0
	width: 31px
	height: 58px
	margin: auto
	top: 0
	left:0
	bottom: 0
	right:0
	background-color: rgba(0,0,0,0.6)
	border-radius: 25px
	padding: 25px 40px
	font-size: 2.5em
	.spinning
		margin: 0
		animation: rotate 2s linear infinite

@keyframes rotate
	from
		transform: rotate(0deg)
	to
		transform: rotate(360deg)

.showLoading
	animation: helloLoading 0.2s ease-out forwards
	opacity: 1

@keyframes helloLoading
	0%
		opacity: 0
		transform: translateY(1em)
	80%
		opacity: 1
		transform: translateY(-0.2em)
	100%
		transform: translateY(0em)

.date
	text-transform: uppercase
	font-size: 5em
	margin-bottom: 0.75em
	width:90%
	margin-left: auto
	margin-right: auto
	overflow:	auto

.date div
	float: left
	text-align: center
	width:33%

.info
	display: block
	clear: both
	font-size: 1em
	text-align: center
	margin-bottom: 5.5em

footer img
	margin-left: auto
	margin-right: auto
	display: inline-block
	opacity: 0.3
	transition: all .1s
	&:hover
		opacity: 0.7

footer
	margin-bottom: 4em
	text-align: center
